# Cross-platform formatting config
# See https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{js,json,css,ttl,rdf,skos,html,css}]
indent_style = space
indent_size = 2
charset = utf-8

# 2 space indentation
[*.{md}]
indent_style = space
indent_size = 4
charset = utf-8

# Tab indentation
[Makefile,*.mk]
indent_size = 4
indent_style = tab
